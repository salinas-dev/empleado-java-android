<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:id="@+id/imagePapeleria"
        android:layout_width="271dp"
        android:layout_height="108dp"
        app:srcCompat="@drawable/trabaja"
        android:layout_marginLeft="50dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:text="NOMBRE:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
           app:srcCompat="@drawable/ic_person"/>

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:hint="Nombre" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:text="TIPO DE EMPLEADO:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    <Spinner
        android:id="@+id/spnTipoEmpleado"
        android:layout_width="292dp"
        android:layout_height="46dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:entries="@array/tipos_empleado"
        android:prompt="@string/tipo_empleado_prompt"
        app:startIconDrawable="@drawable/ic_time"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:text="HORAS DE TRABAJO:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
    <Spinner
        android:id="@+id/spnHorasTrabajadas"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:startIconDrawable="@drawable/ic_baseline_shopping_bag_24"
        android:entries="@array/horas_trabajadas"
        android:prompt="@string/horas_trabajadas_prompt" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="140dp"
            android:text="CUOTA:"
            android:textColor="@color/black"

            android:textSize="20dp"
            android:textStyle="bold" />


    <EditText
        android:id="@+id/edtCuotaPorHora"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnCalcularSueldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:text="Calcular sueldo"
        android:textColor="@color/black"/>


    <Button
        android:id="@+id/buttonNuevo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/boton_nuevo"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/buttonSalir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/boton_salir"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:textColor="@color/black"/>


</LinearLayout>
